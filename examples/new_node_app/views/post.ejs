<body>
	<h1>Welcome to my app :)</h1>
	<p id="display-name">Hello world.</p>
	
	<div id="post">
		<textarea id="post-text"></textarea>
		<br>
		<button onclick={savePost()}>Post</button>
	</div>
	
	<script>
		
		function savePost() {
			const uid = firebase.auth().currentUser.uid;
			const db = firebase.database();
			const ref = db.ref('/users/' + uid + '/posts');
		
			const post = {
				text: document.getElementById("post-text").value,
				date: new Date().toString()
			};
			
			ref.push(post).key;
		}
		
		const userName = document.getElementById("display-name");
		firebase.auth().onAuthStateChanged(function(user) {
			if (user) {
				console.log(user.uid);
				userName.textContent = "Hello, " + user.displayName;
				const userInput = document.getElementById('userInput');
				userInput.value = user.uid;
			} else {
				console.log("no user");
			}
		});
		
		function signOut() {
			firebase.auth().signOut();
			location.reload();
		}
	</script>
</body>
